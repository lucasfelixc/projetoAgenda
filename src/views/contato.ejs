<%- include('./includes/head') %>
<%- include('./includes/nav') %>

<div class="container">
    <div class="row">
        <div class="col-lg-2"></div>

        <div class="col-lg-8 my-3">
            <h1 class="display1 text-center">Criar contato</h1>
            <p class="text-center lead">Crie o contato abaixo</p>

            <%- include('./includes/messages') %>

            <% if(contato._id) { %>
            <form class="test" action="/contato/edit/<%= contato._id %>" method="POST">
            <% } else { %>
            <form class="test" action="/contato/register" method="POST">
            <% } %>
              <input type="hidden" name="_csrf" value=<%= csrfToken %>>
              <div class="form-group">
                <label for="exampleInputEmail1">Nome</label>
                <input value="<%= contato.nome %>" type="text" class="form-control" name="nome">
              </div>
              <div class="form-group">
                <label for="exampleInputEmail1">Sobrenome</label>
                <input value="<%= contato.sobrenome %>" type="text" class="form-control" name="sobrenome">
              </div>
              <div class="form-group">
                <label for="exampleInputEmail1">Email</label>
                <input value="<%= contato.email %>" type="email" class="form-control" name="email">
              </div>
              <div class="form-group">
                <label for="exampleInputEmail1">Telefone</label>
                <input value="<%= contato.telefone %>" type="tel" class="form-control" name="telefone">
              </div>
              <button type="submit" class="btn btn-primary">Cadastrar</button>
            </form>
        </div>
    </div>
</div>

<%- include('./includes/footer') %>